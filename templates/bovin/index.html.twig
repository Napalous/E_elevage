{% extends 'base.html.twig' %}

{% block title %}Bovin index{% endblock %}

{% block body %}
<div id="page-menu">

            <div id="page-menu-wrap">

                <div class="container clearfix">

                    <div class="menu-title"><span>Bovins</span></div>                                       

                </div>

            </div>

        </div>
<section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <div class="table-responsive">

    <table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>                
                <th>Numero_ordre</th>
                <th>Sexe</th>
                <th>Race</th>
                <th>Categorie</th>
                <th>Date_naissance</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bovin in bovins %}
            <tr>
                <td>{{ bovin.numeroOrdre }}</td>
                <td>{{ bovin.sexe }}</td>
                <td>{{ bovin.races.libelle }}</td>
                <td>{{ bovin.categories.libelle }}</td>
                <td>{{ bovin.dateNaissance ? bovin.dateNaissance|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('bovin_show', {'id': bovin.id}) }}">show</a>
                    <a href="{{ path('bovin_edit', {'id': bovin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

                </div>

            </div>

        </section>
    <a href="{{ path('bovin_new') }}">Create new</a>
{% endblock %}
