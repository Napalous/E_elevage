{% extends 'base.html.twig' %}

{% block title %}Type index{% endblock %}

{% block body %}
<div id="page-menu">

            <div id="page-menu-wrap">

                <div class="container clearfix">

                    <div class="menu-title"><span>Liste des types de Bovin</span></div>      
                    <nav>
                        <ul>
                            <li class="current"><a href="{{ path('type_new') }}"><div>Cr√©ation de type </div></a></li>                            
