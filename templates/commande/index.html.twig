{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
<div id="page-menu">

            <div id="page-menu-wrap">

                <div class="container clearfix">

                    <div class="menu-title"><span>Liste des Commandes</span></div>                                       

                </div>

            </div>

        </div>
<section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <div class="table-responsive">

    <table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>N° Commande</th>
                <th>N° Client</th>
                <th>Date de la commande</th>                
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.id }}</td>
                <td>{{ commande.clients.tel }}</td>
                <td>{{ commande.datecommande ? commande.datecommande|date('d-m-Y H:i:s') : '' }}</td>                
                <td>
                    <a class="btn btn-info" href="{{ path('commande_show', {'id': commande.id}) }}"><i class="icon-line-eye"></i>&nbsp;</a>
                    <a class="btn btn-warning" href="{{ path('commande_edit', {'id': commande.id}) }}"><i class="icon-pencil"></i>&nbsp;</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

                </div>

            </div>

        </section>
    <a href="{{ path('commande_new') }}">Create new</a>
{% endblock %}
