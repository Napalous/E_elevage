{% extends 'base.html.twig' %}

{% block title %}DetailsCommande index{% endblock %}

{% block body %}
<div id="page-menu">

            <div id="page-menu-wrap">

                <div class="container clearfix">

                    <div class="menu-title"><span>Liste détails des commandes</span></div>                                       

                </div>

            </div>

        </div>
<section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <div class="table-responsive">

    <table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>N° Commande</th>
                <th>N° Client</th>
                <th>Produit</th>
                <th>Quantité</th>
                <th>Prix unitaire</th>
                <th>Date Commande</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for details_commande in details_commandes %}
            <tr>
                <td>{{ details_commande.commande }}</td>
                <td>{{ details_commande.commande.clients.tel }}</td>
                <td>{{ details_commande.produits.libelle }}</td>
                <td>{{ details_commande.qtecommandee }}</td>
                <td>{{ details_commande.prixUnitaire }}</td>
                <td>{{ details_commande.commande.datecommande ? details_commande.commande.datecommande|date('Y-m-d H:i:s') : ''  }}</td>
                <td>
                    <a href="{{ path('details_commande_show', {'id': details_commande.id}) }}">show</a>
                    <a href="{{ path('details_commande_edit', {'id': details_commande.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

                </div>

            </div>

        </section>
{% endblock %}
