{% extends 'base.html.twig' %}

{% block title %}Race index{% endblock %}

{% block body %}
<div id="page-menu">

            <div id="page-menu-wrap">

                <div class="container clearfix">

                    <div class="menu-title"><span>Liste des Races</span></div>
                    <nav>
                        <ul>
                            <li class="current"><a href="{{ path('race_new') }}"><div>Cr√©ation de la race </div></a></li>                            
                        </ul>
                    </nav>                                        

                </div>

            </div>

        </div>
<section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <div class="table-responsive">

    <table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Libelle</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for race in races %}
            <tr>
                <td>{{ race.libelle }}</td>
                <td width="50" height="50"><img class="user-image" src="{{ asset('uploads/images/')}}{{ race.photo }}" alt="groupe" ></td>
                <td>
                    <a href="{{ path('race_show', {'id': race.id}) }}">show</a>
                    <a href="{{ path('race_edit', {'id': race.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

                </div>

            </div>

        </section>
{% endblock %}
