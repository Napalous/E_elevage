{% extends 'base.html.twig' %}

{% block title %}Statistique{% endblock %}

{% block body %}
<div id="page-menu">

            <div id="page-menu-wrap">

                <div class="container clearfix">

                    <div class="menu-title"><span>L'achat des bovins</span></div>                                                      

                </div>

            </div>

        </div>
<section id="content">

            <div class="content-wrap">

                <div class="container clearfix">

                    <div class="table-responsive">

    <table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Montant</th>
                <th>Date</th>               
            </tr>
        </thead>
        <tbody>
        {{ dump(ventes) }}
        {% for vente in ventes %}
            <tr>
                <td>{{ vente.montant|number_format }}</td>                
                <td>{{ vente.createAt ? vente.createAt|date('d-m-Y') }}</td>                             
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

                </div>

            </div>

        </section>
{% endblock %}
